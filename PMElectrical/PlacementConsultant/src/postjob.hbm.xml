<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.virtusa.placement.pojo.PostJob" table="POSTJOB">
	   <id name="jobId" column="JOB_ID" >
	   <generator class="sequence">
	   		<param name="sequence">job_id_seq</param>
	   </generator>
    	 </id>
    	 
    	 <property name="companyName">
    	 <column name="COMPANY_NAME"></column>
    	 </property>
    	 <property name="userName">
    	 <column name="USERNAME"></column>
    	 </property>
    	 <property name="funArea">
    	 <column name="FUNCTIONAL_AREA"></column>
    	 </property>
    	 <property name="desig">
    	 <column name="DESIGNATION"></column>
    	 </property>
    	 <property name="minExp">
    	 <column name="MIN_EXP"></column>
    	 </property>
    	 <property name="maxExp">
    	 <column name="MAX_EXP"></column>
    	 </property>
    	 <property name="skill">
    	 <column name="SKILL"></column>
    	 </property>
    	 <property name="location">
    	 <column name="LOCATION"></column>
    	 </property>
    	 <property name="salary">
    	 <column name="SALARY"></column>
    	 </property>
    	 <property name="jobDesc">
    	 <column name="JOB_DESC"></column>
    	 </property>
    	 <property name="postedDate">
    	 <column name="POSTED_DATE"></column>
    	 </property>
    	 	  
 </class>
   
  </hibernate-mapping>