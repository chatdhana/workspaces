<field name="company_name">
<field-validator type="requiredstring">
<message>Company name required</message>
</field-validator> 
<field-validator type="regex"> 
<param name="expression">[a-zA-Z]{1,30}</param>
<message>Enter proper company name</message>
</field-validator> 
</field>






<field name="contactperson_name">
<field-validator type="requiredstring">
<message>Contact Person name required</message>
</field-validator> 
<field-validator type="regex"> 
<param name="expression">[a-zA-Z]{1,30}</param>
<message>Enter proper contact person name</message>
</field-validator> 
</field>




<field name="contactperson_empid">
<field-validator type="required">
<message>Emp-id required</message>
</field-validator> 
<field-validator type="regex">
<param name="expression">[a-zA-Z0-9]{1,15}</param>
<message>Enter a valid email id</message>
</field-validator>
</field>








<field name="contactaddress">
<field-validator type="required">
<message>Contact address required</message>
</field-validator>
</field>









<field name="phone">

<field-validator type="regex">

<param name="expression">[0-9]{1,12}</param>

<message>Enter a valid landline number</message>

</field-validator>

</field>








<field name="mobile">

<field-validator type="regex">

<param name="expression">[0-9]{1,12}</param>

<message>Enter a valid mobile number</message>

</field-validator>

</field>






<field name="email">

<field-validator type="required">

<message>Email id required</message>

</field-validator> 

<field-validator type="email">

<message>Enter a valid email id</message>

</field-validator>

</field>


</validators>




